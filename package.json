{
  "name": "federated-graphql-starter",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --check .",
    "format:fix": "prettier --write \"**/*.{ts,js,md}\"",
    "check-types": "turbo run check-types",
    "generate:schema": "rover subgraph introspect http://localhost:4001/graphql > apps/users/schema.graphql && rover subgraph introspect http://localhost:4002/graphql > apps/products/schema.graphql",
    "compose:supergraph": "rover supergraph compose --config apps/gateway/supergraph.yaml --elv2-license=accept > apps/gateway/supergraph.graphql",
    "start:gateway": "router --config apps/gateway/router.yaml",
    "start:users": "turbo run dev --filter=users",
    "start:products": "turbo run dev --filter=products",
    "precompose": "pnpm --filter=gateway run compose"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
